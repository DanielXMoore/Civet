{testCase} from ../helper.civet

describe "coffeeComment", ->
  testCase """
    first line comment
    ---
    "civet coffee-compat"
    # first line comment
    ---
    // first line comment
  """

  testCase """
    shebang with directive
    ---
    #! /usr/bin/env coffee
    "civet coffee-compat"
    # comment
    ---
    #! /usr/bin/env coffee
    // comment
  """

  testCase """
    inline ### anywhere
    ---
    f ### my function ### = (x ###: string###) ###: string ### -> x
    ---
    f /* my function */ = function(x /*: string*/) /*: string */ { return x }
  """
