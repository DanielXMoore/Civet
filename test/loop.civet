{testCase} from ./helper.civet

describe "loop", ->
  testCase """
    basic
    ---
    loop
      x++
      break
    ---
    while(true) {
      x++
      break
    }
  """

  testCase """
    postfix
    ---
    run() loop
    ---
    while(true) { run() }
  """

  testCase """
    empty
    ---
    loop
    ---
    while(true);
  """

  testCase """
    loop generator
    ---
    loop*
      1
    ---
    (function*(){while(true) {
      yield 1
    }})()
  """
