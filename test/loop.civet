{testCase} from ./helper.civet

describe "loop", ->
  testCase """
    basic
    ---
    loop
      x++
      break
    ---
    while(true) {
      x++
      break
    }
  """

  testCase """
    postfix
    ---
    run() loop
    ---
    while(true) { run() }
  """

  testCase """
    empty
    ---
    loop
    ---
    while(true);
  """

  testCase """
    break/continue with
    ---
    =>
      loop
        if finished()
          break with 'done'
    ---
    () => {
      let results=[];while(true) {
        if (finished()) {
          results = 'done';break
        } else {results.push(void 0)}
      };return results;
    }
  """
