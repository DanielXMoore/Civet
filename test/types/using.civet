{ testCase, throws } from ../helper.civet

describe "using", ->
  testCase """
    using
    ---
    using x = getResource()
    x.doSomething()
    ---
    using x = getResource()
    x.doSomething()
  """

  testCase """
    using with multiple resources
    ---
    using x = getResource(), y = getResource()
    x.doSomething()
    y.doSomething()
    ---
    using x = getResource(), y = getResource()
    x.doSomething()
    y.doSomething()
  """

  testCase """
    multiple resources with newline
    ---
    using x = getResource(),
          y = getResource()
    x.doSomething()
    y.doSomething()
    ---
    using x = getResource(),
          y = getResource()
    x.doSomething()
    y.doSomething()
  """

  throws """
    throws errors in js mode
    ---
    using x = getResource()
    x.doSomething()
  """, undefined, js: true
