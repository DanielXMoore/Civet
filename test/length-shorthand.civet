{ testCase } from ./helper.civet


describe "length shorthand", ->
  testCase """
    #
    ---
    #
    ---
    this.length
  """

  testCase """
    @#
    ---
    @#
    ---
    this.length
  """

  testCase """
    @# in x
    ---
    @# in x
    ---
    this.length in x
  """

  testCase """
    # in x
    ---
    # in x
    ---
    "length" in x
  """

  testCase """
    # of x
    ---
    'civet coffeeOf'
    # of x
    ---
    "length" in x
  """

  testCase """
    property access
    ---
    array.#
    ---
    array.length
  """

  testCase """
    property access chain
    ---
    array.#.toString()
    ---
    array.length.toString()
  """
