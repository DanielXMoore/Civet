{testCase} from ./helper.civet

describe "template literal", ->
  testCase """
    basic
    ---
    `abchidng`
    ---
    `abchidng`
  """

  testCase """
    substitutions
    ---
    `abchidng${x}`
    ---
    `abchidng${x}`
  """

  testCase """
    $$$
    ---
    `$$$`
    ---
    `$$$`
  """

  testCase """
    escapes
    ---
    `\\${}\\``
    ---
    `\\${}\\``
  """

  testCase """
    tagged
    ---
    x`yo`
    ---
    x`yo`
  """

  testCase """
    tagged triple-quote
    ---
    x```yo```
    ---
    x`yo`
  """

  testCase """
    block template literal
    ---
    ```
      A number # ${n.toFixed 4}

      ${bye}
    ```
    ---
    `A number # ${n.toFixed(4)}\n\n${bye}`
  """
