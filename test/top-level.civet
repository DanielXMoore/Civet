{testCase, throws} from ./helper.civet

describe "top-level", ->
  testCase """
    all indented
    ---
      x = 5
      return
    ---
      x = 5
      return
  """

  testCase """
    all indented after directive
    ---
    "civet coffee-compat"
      x = 5
      return
    ---
      var x
      x = 5
      return
  """

  throws """
    can't dedent
    ---
      x = 5
    y = 10
  """
