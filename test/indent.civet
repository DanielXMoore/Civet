{ testCase, throws } from ./helper.civet

describe "indent", ->
  testCase """
    two spaces
    ---
    if true
      if false
        return true
      else
        return false
    else
      return null
    ---
    if (true) {
      if (false) {
        return true
      }
      else {
        return false
      }
    }
    else {
      return null
    }
  """

  testCase """
    three spaces
    ---
    if true
       if false
          return true
       else
          return false
    else
       return null
    ---
    if (true) {
       if (false) {
          return true
       }
       else {
          return false
       }
    }
    else {
       return null
    }
  """

  testCase """
    one space
    ---
    if true
     if false
      return true
     else
      return false
    else
     return null
    ---
    if (true) {
     if (false) {
      return true
     }
     else {
      return false
     }
    }
    else {
     return null
    }
  """

  testCase """
    mixed spaces
    ---
    if true
     if false
       return true
     else
         return false
    else
       return null
    ---
    if (true) {
     if (false) {
       return true
     }
     else {
         return false
     }
    }
    else {
       return null
    }
  """

  testCase """
    tabs and spaces
    ---
    if true
     if false
      return true
    \telse
    \t return false
    ---
    if (true) {
     if (false) {
      return true
     }
    \telse {
    \t return false
     }
    }
  """

  testCase """
    custom tabs and spaces
    ---
    "civet tab=2"
    if true
      if false
        return true
    \telse
    \t\treturn false
    ---
    if (true) {
      if (false) {
        return true
      }
    \telse {
    \t\treturn false
      }
    }
  """

  throws """
    mismatched custom tabs and spaces
    ---
    "civet tab=3"
    if true
      if false
        return true
    \telse
    \t\treturn false
  """
