{testCase} from ./helper.civet

describe "while", ->
  testCase """
    basic
    ---
    while (x < 3)
      x++
    ---
    while (x < 3) {
      x++
    }
  """

  testCase """
    optional parens
    ---
    while x < 3
      x++
    ---
    while (x < 3) {
      x++
    }
  """

  testCase """
    variable that starts with while isn't interpreted as block
    ---
    while2
    x
    ---
    while2
    x
  """

  testCase """
    until
    ---
    until (x < 3)
      x--
    ---
    while (!(x < 3)) {
      x--
    }
  """

  testCase """
    postfix while
    ---
    x() while y
    ---
    while (y) { x() }
  """

  testCase """
    postfix until
    ---
    x() until y
    ---
    while (!y) { x() }
  """

  testCase """
    postfix while with semicolon
    ---
    x() while y;
    ---
    while (y) { x() };
  """

  testCase """
    postfix until with semicolon
    ---
    x() until y;
    ---
    while (!y) { x() };
  """

  describe "iteration results", ->
    testCase """
      semi-colon suppresses result push
      ---
      x = while y
        if y(1)
          a
        else
          b;
      ---
      x = (()=>{const results=[];while (y) {
        if (y(1)) {
          results.push(a)
        }
        else {
          b;
        }
      }return results})()
    """

  describe "condition decs", ->
    testCase """
      while
      ---
      while {x, y} := next()
        x++
      ---
      let ref;while ((ref = next()) && 'x' in ref && 'y' in ref) {
        const {x, y} = ref;
        x++
      }
    """

    testCase """
      until
      ---
      until item := next()
        console.log "falsey", item
      ---
      let ref;while (!(ref = next())) {
        const item = ref;
        console.log("falsey", item)
      }
    """

    testCase """
      while with statement before
      ---
      x = 0
      while {x, y} := next()
        x++
      ---
      x = 0
      let ref;
      while ((ref = next()) && 'x' in ref && 'y' in ref) {
        const {x, y} = ref;
        x++
      }
    """

    testCase """
      while inside function
      ---
      f = ->
        while {x, y} := next()
          x++
        ;
      ---
      f = function() {
        let ref;
        while ((ref = next()) && 'x' in ref && 'y' in ref) {
          const {x, y} = ref;
          x++
        }
        ;
      }
    """

    testCase """
      while inside function
      ---
      f = ->
        a
        while {x, y} := next()
          x++
        ;
      ---
      f = function() {
        a
        let ref;
        while ((ref = next()) && 'x' in ref && 'y' in ref) {
          const {x, y} = ref;
          x++
        }
        ;
      }
    """
