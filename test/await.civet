{testCase} from ./helper.civet

describe "await expression", ->
  testCase """
    basic
    ---
    await x
    ---
    await x
  """

  testCase """
    repeated
    ---
    await await x
    ---
    await await x
  """

  testCase """
    await op
    ---
    await.all [get(1), get(2)]
    ---
    await Promise.all([get(1), get(2)])
  """

  testCase """
    await with parens
    ---
    await.race(doIt())
    ---
    await Promise.race(doIt())
  """
