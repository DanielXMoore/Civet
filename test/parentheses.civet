import {testCase} from "./helper.civet"

describe "parentheses", ->
  testCase """
    keeps parentheses as written
    ---
    (x)
    ---
    (x);
  """

  testCase """
    keeps whitespace within
    ---
    (   x )
    ---
    (   x );
  """

  testCase """
    keeps comments within
    ---
    ( /*a*/ x  /*aa*/)
    ---
    ( /*a*/ x  /*aa*/);
  """

  testCase """
    keeps before
    ---
    a
    /** @type Y */ (x)
    ---
    a;
    /** @type Y */ (x);
  """
