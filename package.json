{
  "name": "@danielx/civet",
  "version": "0.5.26",
  "description": "CoffeeScript style syntax for TypeScript",
  "main": "dist/main.js",
  "module": "dist/main.mjs",
  "exports": {
    ".": {
      "import": "./dist/main.mjs",
      "require": "./dist/main.js"
    },
    "./esm": "./dist/esm.mjs",
    "./esbuild-plugin": "./dist/esbuild-plugin.js"
  },
  "types": "dist/types.d.ts",
  "bin": {
    "civet": "dist/civet"
  },
  "files": [
    "dist/",
    "register.js"
  ],
  "engines": {
    "node": "^18.6.0 || ^16.17.0"
  },
  "scripts": {
    "build": "bash ./build/build.sh",
    "docs:dev": "yarn build && vitepress dev civet.dev",
    "docs:build": "yarn build && vitepress build civet.dev",
    "docs:preview": "yarn build && vitepress preview civet.dev",
    "prepublishOnly": "yarn build && yarn test",
    "test": "c8 mocha"
  },
  "author": "Daniel X. Moore",
  "license": "MIT",
  "devDependencies": {
    "@danielx/hera": "0.8.0",
    "@types/assert": "^1.5.6",
    "@types/coffeescript": "^2.5.2",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.8",
    "axios": "^1.2.2",
    "c8": "^7.12.0",
    "esbuild": "^0.14.49",
    "esbuild-coffeescript": "^2.1.0",
    "marked": "^4.2.4",
    "mocha": "^10.0.0",
    "prettier": "^2.8.1",
    "terser": "^5.16.1",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4",
    "vitepress": "^1.0.0-alpha.35",
    "vue": "^3.2.45"
  },
  "c8": {
    "all": true,
    "reporter": [
      "lcov",
      "text"
    ],
    "extension": [
      ".civet",
      ".coffee",
      ".js",
      ".ts"
    ],
    "include": [
      "source"
    ]
  },
  "mocha": {
    "extension": [
      "civet",
      "coffee"
    ],
    "loader": [
      "ts-node/esm",
      "./build/coffee-esm.mjs",
      "./build/hera-esm.mjs",
      "./dist/esm.mjs"
    ],
    "reporter": "dot",
    "recursive": true,
    "spec": [
      "test"
    ]
  }
}
