{
  "name": "eslint-plugin-civet",
  "type": "module",
  "version": "0.0.2",
  "description": "ESLint plugin for Civet code",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./ts": {
      "import": "./dist/ts.js",
      "require": "./dist/ts.cjs"
    }
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "civet --no-config esbuild.civet",
    "prepublishOnly": "yarn build",
    "test": "mocha"
  },
  "homepage": "https://github.com/DanielXMoore/Civet#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DanielXMoore/Civet.git"
  },
  "keywords": [
    "eslint"
  ],
  "author": "Civet Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DanielXMoore/Civet/issues"
  },
  "peerDependencies": {
    "@danielx/civet": ">=0.6.0",
    "@eslint/js": ">=9.0.0",
    "eslint": ">=9.0.0"
  },
  "optionalDependencies": {
    "typescript-eslint": ">=7.0.0"
  },
  "devDependencies": {
    "@danielx/civet": "^0.7.3",
    "@eslint/js": "^9.1.1",
    "@types/eslint": "^8.56.10",
    "eslint": "^9.1.1",
    "mocha": "^10.2.0",
    "typescript-eslint": "^7.8.0"
  },
  "mocha": {
    "extension": [
      "civet"
    ],
    "require": "@danielx/civet/register.js"
  }
}
