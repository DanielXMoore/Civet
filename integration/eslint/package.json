{
  "name": "eslint-plugin-civet",
  "type": "module",
  "version": "0.0.5",
  "description": "ESLint plugin for Civet code",
  "engines": {
    "node": ">=18.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./ts": {
      "import": "./dist/ts.js",
      "require": "./dist/ts.cjs"
    }
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "civet --no-config esbuild.civet",
    "prepublishOnly": "yarn build",
    "test": "mocha"
  },
  "homepage": "https://github.com/DanielXMoore/Civet#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DanielXMoore/Civet.git",
    "directory": "integration/eslint"
  },
  "keywords": [
    "eslint"
  ],
  "author": "Civet Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DanielXMoore/Civet/issues"
  },
  "peerDependencies": {
    "@danielx/civet": ">=0.6.0",
    "@eslint/js": ">=8.57.0",
    "eslint": ">=8.57.0",
    "typescript-eslint": ">=7.0.0"
  },
  "peerDependenciesMeta": {
    "typescript-eslint": {
      "optional": true
    }
  },
  "devDependencies": {
    "@danielx/civet": "^0.7.25",
    "@eslint/js": "^9.9.1",
    "@types/eslint": "^9.6.1",
    "eslint": "^9.9.1",
    "mocha": "^10.7.3",
    "typescript-eslint": "^8.2.0"
  },
  "mocha": {
    "extension": [
      "civet"
    ],
    "require": "@danielx/civet/register.js"
  }
}
